            <Button Text="Take Video" Command="{Binding TakeVideoButtonCommand}"/>
            <Button Text="Pick Video" Command="{Binding PickVideoButtonCommand}"/>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
